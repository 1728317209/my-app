{
  "env": {
    "browser": true,
    "es2015": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "globals": {
        "test": true,
        "expect": true
      }
    }
  ]
}
